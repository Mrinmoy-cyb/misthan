generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(ulid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sweets Sweet[]
}

model Category {
  id          String   @id @default(ulid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sweets Sweet[]

  @@index([name])
}

model Sweet {
  id         String   @id @default(ulid())
  name       String
  price      Decimal  @db.Decimal(10, 2)
  stock      Int
  userId     String
  categoryId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@index([name])
  @@index([categoryId])
}
